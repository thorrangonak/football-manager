# ===================================
# Football Manager - Environment Config
# ===================================

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/football_manager?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Telegram Bot
BOT_TOKEN="your-telegram-bot-token-here"
BOT_USERNAME="FootballManagerBot"

# API Server
API_PORT=3001
API_URL="http://localhost:3001"

# Web App
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"
WEB_PORT=3000

# Game Settings
TIMEZONE="Europe/Istanbul"
MATCH_DURATION_SECONDS=60
TICKS_PER_MATCH=60

# JWT Secret (for web auth)
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Environment
NODE_ENV="development"
